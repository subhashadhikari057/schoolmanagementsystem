{
  "name": "school-management-system",
  "version": "1.0.0",
  "description": "A comprehensive school management system built with NestJS and Next.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "prod": "concurrently \"pnpm prod:backend\" \"pnpm prod:frontend\"",
    "start:dev": "pnpm dev:backend",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "prod:backend": "pnpm --filter backend start",
    "prod:frontend": "pnpm --filter frontend start",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "lint": "pnpm lint:backend && pnpm lint:frontend",
    "lint:backend": "pnpm --filter backend lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "test": "pnpm test:backend",
    "test:backend": "pnpm --filter backend test",
    "test:all": "pnpm test:backend && pnpm test:frontend && pnpm test:shared",
    "test:frontend": "pnpm --filter frontend test -- --run",
    "test:shared": "pnpm --filter shared-types test",
    "dev-manager": "pwsh scripts/dev-manager.ps1",
    "db:reset": "pnpm dev-manager db reset",
    "db:seed": "pnpm dev-manager db seed",
    "db:reset-and-seed": "pnpm dev-manager db reset-and-seed",
    "logs:analyze": "pnpm dev-manager logs analyze",
    "docker:start": "./scripts/docker-dev-start.ps1",
    "docker:stop": "./scripts/docker-dev-stop.ps1",
    "docker:reset": "./scripts/docker-dev-reset.ps1",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/csurf": "^1.11.5",
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "csurf": "^1.11.0",
    "dotenv-safe": "^9.1.0",
    "next": "15.5.9",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
